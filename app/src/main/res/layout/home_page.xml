<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".HomePage" >

    <Button
        android:id="@+id/btn_view_request"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rectangle1"
        android:ems="10"
        android:gravity="left|center_vertical"
        android:hint="@string/viewrequest_hint"
        android:inputType="textPersonName"
        android:textColorHint="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

    <Button
        android:id="@+id/btn_create_request"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle1"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:hint="@string/createrequest_hint"
        android:inputType="textPersonName"
        android:textColorHint="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_view_request"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />


</androidx.constraintlayout.widget.ConstraintLayout>