<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".update_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="141dp"
                android:layout_height="177dp"
                android:width="141dp"
                android:height="177dp"
                app:srcCompat="@drawable/logo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/namech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/name"
                android:textAlignment="center"
                android:textAppearance="@style/login_id" />

            <EditText
                android:id="@+id/name_input_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1"
                android:layout_marginTop="60dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textAlignment="center" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/enrollment_no_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="@string/enno"
                android:textAppearance="@style/login_id" />

            <EditText
                android:id="@+id/enrollment_no_input_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1"
                android:ems="10"
                android:hint="Enrollment No"
                android:layout_marginTop="60dp"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/email_id_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emailid"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/login_id" />

            <EditText
                android:id="@+id/email_id__input_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1"
                android:ems="10"
                android:hint="Email ID"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:layout_marginTop="60dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/phone_no_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/phoneno"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/login_id"/>

            <EditText
                android:id="@+id/phone_no_input_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/rectangle1"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/changepass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Change Password"
                android:textAppearance="@style/login_id" />

            <EditText
                android:id="@+id/chanepassbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1"
                android:ems="10"
                android:hint="Change Password"
                android:layout_marginTop="60dp"
                android:inputType="textPersonName"
                android:textAlignment="center" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/confirmpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Confirm Password"
                android:textAppearance="@style/login_id" />

            <EditText
                android:id="@+id/confirpassbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1"
                android:ems="10"
                android:hint="Confirm Password"
                android:layout_marginTop="60dp"
                android:inputType="textPersonName"
                android:textAlignment="center" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@color/black" />

        </RelativeLayout>


    </LinearLayout>



</ScrollView>